<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="meeteatPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.meeteat.model.Preference.Cuisine</class>
    <class>com.meeteat.model.Preference.Diet</class>
    <class>com.meeteat.model.Preference.Ingredient</class>
    <class>com.meeteat.model.Preference.PreferenceTag</class>
    <class>com.meeteat.model.Offer.Message</class>
    <class>com.meeteat.model.Offer.Reservation</class>
    <class>com.meeteat.model.Offer.Review</class>
    <class>com.meeteat.model.User.Cook</class>
    <class>com.meeteat.model.User.User</class>
    <class>com.meeteat.model.Offer.Offer</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/meeteat?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
