<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="MEETEAT-PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.meeteat.controller.ActionServlet</class>
    <class>com.meeteat.model.User.Cook</class>
    <class>com.meeteat.model.User.User</class>
    <class>com.meeteat.model.Offer.Reservation</class>
    <class>com.meeteat.model.Offer.Review</class>
    <class>com.meeteat.model.Offer.Offer</class>
    <class>com.meeteat.model.Offer.Message</class>
    <class>com.meeteat.model.Preference.Cuisine</class>
    <class>com.meeteat.model.Preference.Diet</class>
    <class>com.meeteat.model.Preference.Ingredient</class>
    <class>com.meeteat.model.Preference.PreferenceTag</class>
    <properties>
      <property name="persistence.schema-generation.database.action" value="create"/>
      <property name="javax.persistence.jdbc.url" value=""/>
      <property name="javax.persistence.jdbc.user" value=""/>
      <property name="javax.persistence.jdbc.driver" value=""/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="meeteatPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/meeteat?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
